{
  "name": "root",
  "private": true,
  "repository": {
    "url": "https://github.com/hsenid-mobile/mycoriza"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "cra-templetize": "^0.0.1"
  },
  "workspaces": [ "packages/*" ],
  "scripts": {
    "templatize:mycoriza": "cra-templetize -i ./packages/mycoriza -o ./packages",
    "templatize:mycoriza-lib": "cra-templetize -i ./packages/mycoriza-lib -o ./packages",
    "prepare": "yarn templatize:mycoriza && yarn templatize:mycoriza-lib"
  }
}
